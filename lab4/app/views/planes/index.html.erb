<h1>Planes</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Actions</th>
    <th>Id</th>
    <th>Name</th>
    <th>Seats</th>
  </tr>
  </thead>
  <tbody>
  <% @planes.each do |plane| %>
  <tr>
    <td class="action-column">
      <%= link_to 'Show', plane_path(plane) %> |
      <%= link_to 'Edit', edit_plane_path(plane) %> |
      <%= link_to 'Delete', plane_path(plane), method: :delete, data: {confirm: 'Are you sure?'} %>
    </td>
    <td><%= plane.id %></td>
    <td><%= plane.name %></td>
    <td><%= plane.seats %></td>
  </tr>
  <% end %>
  <%= '<td colspan="4">No planes found</td>'.html_safe if @planes.empty? %>
  </tbody>
</table>

<a href="<%= new_plane_path %>">Create Plane</a>