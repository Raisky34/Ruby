<h1>Countries</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Actions</th>
    <th>Id</th>
    <th>Name</th>
    <th>Airports</th>
  </tr>
  </thead>
  <tbody>
  <% @countries.each do |country| %>
  <tr>
    <td class="action-column">
      <%= link_to 'Show', country_path(country) %> |
      <%= link_to 'Edit', edit_country_path(country) %> |
      <%= link_to 'Delete', country_path(country), method: :delete, data: {confirm: 'Are you sure?'} %>
    </td>
    <td><%= country.id %></td>
    <td><%= country.name %></td>
    <td><%= country.airports.count %></td>
  </tr>
  <% end %>
  <%= '<td colspan="4">No countries found</td>'.html_safe if @countries.empty? %>
  </tbody>
</table>

<a href="<%= new_country_path %>">Create Country</a>