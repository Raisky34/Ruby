<%= simple_form_for @trip do |f| %>
  <%= f.input :time_in %>
  <%= f.input :time_out %>
  <%= f.input :plane_id, collection: Plane.all %>
  <%= f.input :airport_from_id, collection: Airport.all %>
  <%= f.input :airport_to_id, collection: Airport.all %>
  <%= f.input :cost %>
  
  <div class="form-group">
    <label for="airport_to">Users</label>
    <%= select_tag 'user_ids', options_for_select(User.all.map{ |x| [x.full_name, x.id]}, @trip.users.pluck(:id)), :multiple => true, class: 'form-control' %>
  </div>

  <%= f.button :submit %>
<% end %>